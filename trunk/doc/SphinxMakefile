# Makefile for Sphinx documentation
#

# You can set these variables from the command line.
SPHINXOPTS    =
SPHINXBUILD   = sphinx-build
PAPER         =
PYTHON        = python

.PHONY: help clean html dirhtml singlehtml pickle json htmlhelp qthelp devhelp epub latex latexpdf text man changes linkcheck doctest

help:
	@echo "Please use \`make <target>' where <target> is one of"
	@echo "  html       to make standalone HTML files"
	@echo "  dirhtml    to make HTML files named index.html in directories"
	@echo "  singlehtml to make a single large HTML file"
	@echo "  pickle     to make pickle files"
	@echo "  json       to make JSON files"
	@echo "  htmlhelp   to make HTML files and a HTML help project"
	@echo "  qthelp     to make HTML files and a qthelp project"
	@echo "  devhelp    to make HTML files and a Devhelp project"
	@echo "  epub       to make an epub"
	@echo "  latex      to make LaTeX files, you can set PAPER=a4 or PAPER=letter"
	@echo "  latexpdf   to make LaTeX files and run them through pdflatex"
	@echo "  text       to make text files"
	@echo "  man        to make manual pages"
	@echo "  changes    to make an overview of all changed/added/deprecated items"
	@echo "  linkcheck  to check all external links for integrity"
	@echo "  doctest    to run all doctests embedded in the documentation (if enabled)"

clean:
	rm -rf build

# Dependencies to perform before running other builds.
SPHINX_DEPENDENCIES = en fr

# Copy-paste the english Makefile everwhere its needed.
% :
	$(PYTHON) -c "import shutil; shutil.copyfile('_templates/Makefile', 'src/$@/Makefile')"
	$(PYTHON) -c "import shutil; shutil.copyfile('_templates/make.bat', 'src/$@/make.bat')"

html: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	cd src/fr && make $@ LANG=fr

dirhtml: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	cd src/fr && make $@ LANG=fr

singlehtml: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	cd src/fr && make $@ LANG=fr

pickle: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	cd src/fr && make $@ LANG=fr

json: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	cd src/fr && make $@ LANG=fr

htmlhelp: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	cd src/fr && make $@ LANG=fr

qthelp: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	cd src/fr && make $@ LANG=fr

raptorhelp: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	cd src/fr && make $@ LANG=fr

devhelp: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	rm config/config.pyc
	cd src/fr && make $@ LANG=fr

epub: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	cd src/fr && make $@ LANG=fr

latex: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	cd src/fr && make $@ LANG=fr

latexpdf: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	cd src/fr && make $@ LANG=fr

text: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	cd src/fr && make $@ LANG=fr

man: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	cd src/fr && make $@ LANG=fr

changes: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	cd src/fr && make $@ LANG=fr

linkcheck: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	cd src/fr && make $@ LANG=fr

doctest: $(SPHINX_DEPENDENCIES)
	cd src/en && make $@ LANG=en
	cd src/fr && make $@ LANG=fr
